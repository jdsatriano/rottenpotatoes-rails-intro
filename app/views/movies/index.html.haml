-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th#title_header{:class => ("hilite" if @sort == "t")}= link_to "Movie Title", movies_path(:sort => "title", :var => "t")
      %th Rating
      %th#release_date{:class => ("hilite" if @sort == "rd")}= link_to "Release Date", movies_path(:sort => "release_date", :var => "rd")
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
